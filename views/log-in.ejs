<!-- niekedy možno doplniť front end validáciu -->
<div class="log-in-aligner">
<% if (typeof errors !== "undefined") { %>
    <ul class="form-fail-messages-container">
     <% errors.forEach(error => { %>
        <li>
            <%= error.param.toLowerCase() + error.msg %>
        </li>
        <% }) %>
    </ul>
    <% } %>
    <div class="log-in-container">
        <form action="/auth/log-in" method="POST">
            <div class="form-group">
                <label for="user-name">Username:</label>
                <input  id="user-name" type="text" name="userName">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" type="password" name="password">
            </div>
            <div class="text-center">
                <button class="btn log-in-submit-btn">Log in</button>
            </div>
        </form>
    </div>
</div>