    <% for( let index = allPosts.length - 1; index >= 0; index-- ) { %>
    <% const post = allPosts[index] %>
    <% const user = post.user %> 
    <% const config = post.config %>

    <div class="post">
        <div class="post__header">
            <a href="<%= user.url %>" class="post__profile--trigger">
                <img class="post__profile-image" src="<%= user.profilePictureUrl %>" alt="profile picture">
                <div class="post__profile-info">
                    <h3 class="post__profile-name">
                        <%= user.userName %>
                    </h3>
                    <h6 class="post__profile-rank member <%= user.highestRank ? user.highestRank + "s-color" : ""%>">
                        <%= user.highestRank %>
                    </h6>
                </div>
            </a>
            
            <h2 class="post__title" style="<%= `color: ${config.titleColor}; text-shadow: .1em .05em ${config.shadowColor}` %>">
                <%= post.title %>
            </h2>
        </div>
        <p class="post__body" style="<%= `color: ${config.bodyColor}; text-shadow: .1em .05em ${config.shadowColor}` %>">
            <%= post.body %>
        </p>
        <div class="post__footer mt-1">
            <p class="">
                posted: <%= post.created_at_formatted %>
            </p>
                        <!-- doplniÅ¥ if edited a title -->
            <p class="">
                <%= post.edited ? `edited${post.updatedAt}` : "" %> 
            </p>
        </div>
        <% if (typeof currentUser !== "undefined" && currentUser.isAdmin) { %>
         <form action="<%= `${user.url}/posts/${post._id}/delete` %>" method="POST" class="mt-1">
             <button class="btn">delete</button>
         </form>
        <% } %>
    </div>
<% } %>

<%- include("./partials/post_form") %> 

    <% if (currentUser) { %>
        <div class="create-post-bubble">
            create post
        </div>
        <script type="module" src="/javascripts/postBubbleAction.js"></script>
    <% } %>